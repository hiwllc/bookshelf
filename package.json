    "@typescript-eslint/parser": "^4.23.0",
    "apollo-server-testing": "^2.24.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.1.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "apollo-server": "^2.24.0",
